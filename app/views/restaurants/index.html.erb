<h2>Restaurants</h2>
<div class="container">
  <ul class="list-group">
    <% @restaurants.each do |restaurant| %>
      <li class="list-group-item"><%= restaurant.name %></li>
      <%= link_to 'See Details', restaurant_path(restaurant), class: "btn btn-primary"  %>
    <% end %>
  </ul>
  <%= link_to "Add a restaurant", new_restaurant_path, class: "btn btn-primary"%>
</div>
